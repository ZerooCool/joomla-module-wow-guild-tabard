<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>WoW Guild Tabard</name>
	<author>Branko Wilhelm</author>
	<creationDate>Apr 2013</creationDate>
	<copyright>(C) 2013 Branko Wilhelm</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>branko.wilhelm@gmail.com</authorEmail>
	<authorUrl>www.z-index.net</authorUrl>
	<version>@REVISION@</version>
	<description>Display Guild Tabard.</description>
	<files>
		<filename module="mod_wow_guild_tabard">mod_wow_guild_tabard.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>tmpl</folder>
	</files>
	<languages folder="lang">
		<language tag="en-GB">en-GB.mod_wow_guild_tabard.ini</language>
		<language tag="de-DE">de-DE.mod_wow_guild_tabard.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="guild" type="text" default="" size="30" required="true" label="MOD_WOW_GUILD_TABARD_GUILD_LABEL" />
				<field name="realm" type="text" default="" size="30" required="true" label="MOD_WOW_GUILD_TABARD_REALM_LABEL" />
				<field name="region" type="list" default="" required="true" label="MOD_WOW_GUILD_TABARD_REGION_LABEL">
					<option value="">-- select --</option>
					<option value="us">USA</option>
					<option value="eu">Europe</option>
					<option value="kr">Korea</option>
					<option value="tw">Taiwan</option>
					<option value="sea">Southeast Asia</option>
				</field>
				<field name="size" type="text" filter="integer" default="240" required="true" label="MOD_WOW_GUILD_TABARD_SIZE_LABEL" description="MOD_WOW_GUILD_TABARD_SIZE_DESC" />
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache_time" type="text" filter="integer" default="60" size="5" required="true" label="MOD_WOW_GUILD_TABARD_CACHE_LABEL" description="MOD_WOW_GUILD_TABARD_CACHE_DESC" />
				<field name="timeout" type="text" filter="integer" default="10" size="5" required="true" label="MOD_WOW_GUILD_TABARD_TIMEOUT_LABEL" description="MOD_WOW_GUILD_TABARD_TIMEOUT_DESC" />
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="collection" priority="1" name="z-index development">http://www.z-index.net/en/extensions.xml</server>
	</updateservers>
</extension>